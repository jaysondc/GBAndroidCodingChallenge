<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/guide_image"
                android:layout_width="48dp"
                android:layout_height="48dp"
                tools:src="@color/colorPrimaryDark"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />

            <TextView
                android:id="@+id/guide_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="My Guide!"
                app:layout_constraintTop_toTopOf="@id/guide_image"
                app:layout_constraintLeft_toRightOf="@id/guide_image"
                />

            <TextView
                android:id="@+id/guide_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="City, "
                app:layout_constraintTop_toTopOf="@id/guide_name"
                app:layout_constraintRight_toLeftOf="@+id/guide_state"
                />

            <TextView
                android:id="@+id/guide_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="State"
                app:layout_constraintTop_toTopOf="@id/guide_city"
                app:layout_constraintRight_toRightOf="parent"
                />

            <TextView
                android:id="@+id/guide_start_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="5/5/2017-"
                app:layout_constraintRight_toLeftOf="@+id/guide_end_date"
                app:layout_constraintTop_toTopOf="@id/guide_end_date"
                />

            <TextView
                android:id="@+id/guide_end_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="5/10/2017"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/guide_state"
                />

        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>

</FrameLayout>